{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "expect": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "requireConfigFile": false
  },
  "plugins": ["prettier"],
  "rules": {
    "no-unused-vars": ["warn", { "varsIgnorePattern": "_.*", "args": "none" }]
  }
}
